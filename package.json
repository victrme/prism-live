{
	"name": "@victr/prism-live",
	"version": "0.0.5",
	"type": "module",
	"description": "Editable code areas powered by Prism.",
	"author": "Lea Verou (http://lea.verou.me)",
	"license": "ISC",
	"keywords": [
		"Prism",
		"code",
		"editor",
		"syntax",
		"highlight"
	],
	"files": [
		"./src"
	],
	"exports": {
		".": "./src/prism-live.js",
		"./prism": "./src/prism/prism.js",
		"./style.css": "./src/prism-live.css",
		"./snippets/*": "./src/snippets/*.js",
		"./language/*": "./src/prism/languages/*.js"
	},
	"prettier": {
		"tabWidth": 4,
		"printWidth": 120,
		"useTabs": true,
		"semi": true
	}
}
